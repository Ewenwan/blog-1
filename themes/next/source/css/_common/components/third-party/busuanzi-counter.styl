if hexo-config("scheme") == Pisces
  .busuanzi-count {
    +tablet() {
      width: auto;
    }
    +mobile() {
      width: auto;
    }
  }

.site-uv,
.site-pv,
.page-pv {
  display: inline-block;

  .busuanzi-value {
    margin: 0 5px;
  }
}

if hexo-config("busuanzi_count.total_visitors") and hexo-config("busuanzi_count.total_views")
  .site-uv
  {
    margin-right: 10px;

    &::after {
      content: "|";
      padding-left: 10px;
    }
  }
