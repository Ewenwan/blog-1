ul {
  list-style-type: bengali;
}

.posts-expand ul {
  list-style-type: bengali;
  margin-left: 20px;
}

.site-author-image {
  border-radius: 50%;
  transition: 1s all;
}

.site-author-image:hover {
  transform: rotate(360deg) scale(1.1);
}

ol {
  margin-left: 20px !important;
}

.posts-expand .fancybox img {
  display: inline-block;
}

.posts-expand table {
  font-family: Georgia;
}

.posts-expand .post-title,
.posts-expand .post-meta {
  text-align: center;
}

.post-more-link {
  margin-top: 20px;
  text-align: center;
}

.post-more-link .btn {
  border: 1px solid;
  padding: 0 5px;
}

.sidebar-toggle {
  box-sizing: content-box;
}

.site-brand-wrapper {
  position: static;
}

code {
  color: #c7254e;
  background-color: #f9f2f4;
}

.header {
  background-size: cover;
  background: url('https://cdn.dode.top/header_background.jpg?imageView2/0/format/jpg/q/75|imageslim') no-repeat;
}

.header-inner {
  padding-top: 310px;
}

html,
body {
  cursor: url("../images/cursor.ico"), auto;
}

::selection {
  background: #d25462;
  color: #fff;
}

.blockquote-center {
  font-family: 'comic sans ms';
}

.post-eof {
  display: flex;
  align-items: center;
  margin: 60px auto 40px;
  background: transparent;
  text-align: center;
  height: 40px;
}

.post-eof hr {
  position: relative;
  margin: 2rem auto;
  width: calc(100% - 4px);
  border: 1px dashed #c5c5c5;
  background: #fff;
  height: 0;
  overflow: visible;
}

.post-eof hr:before {
  position: absolute;
  top: -10px;
  left: 5%;
  z-index: 1;
  color: #c5c5c5;
  content: "\f0c4";
  font: normal normal normal 14px/1 FontAwesome;
  font-size: 20px;
  transition: all 1s ease-in-out;
}

.post-eof:hover hr:before {
  left: calc(95% - 20px);
}

.post:last-child .post-eof {
  display: none;
}

