ul {
  list-style-type: bengali;
}

.posts-expand ul {
  list-style-type: bengali;
  margin-left: 20px;
}

.site-author-image {
  border-radius: 50%;
  transition: 1s all;
}

.site-author-image:hover {
  transform: rotate(360deg) scale(1.1);
}

ol {
  margin-left: 20px !important;
}

.posts-expand .fancybox img {
  display: inline-block;
}

.posts-expand table {
  font-family: Georgia;
}

.posts-expand .post-title,
.posts-expand .post-meta {
  text-align: center;
}

.post-more-link {
  margin-top: 20px;
  text-align: center;
}

.post-more-link .btn {
  border: 1px solid;
  padding: 0 5px;
}

.sidebar-toggle {
  box-sizing: content-box;
}

.site-brand-wrapper {
  position: static;
}

code {
  color: #c7254e;
  background-color: #f9f2f4;
}

.header {
  background-size: cover;
  background: url('https://cdn.dode.top/header_background.jpg') no-repeat;
}

.header-inner {
  padding-top: 310px;
}

html,
body {
  cursor: url("../images/cursor.ico"), auto;
}

::selection {
  background: #d25462;
  color: #fff;
}

.blockquote-center{
  font-family: 'comic sans ms';
}

@import "reward.css";
@import "links.css";
@import "../eevee.css";
@import "codeblock";
